<div class="Hero">
    <img src="/src/assets/pfp.jpg">
    <h1 id="name" >Lia Leyser</h1>
    <div class="tag">
    <p id="tag">Developer | Photographer | Student</p>
    </div>
</div>


<style>
	h1 {
        padding-block: auto;
		font-size: 5ch;
        line-height: 1.4ch;
        z-index: 2;
	}

    p {
        margin: 0;
        width: fit-content;
    }
    
    .tag {
        background-color: var(--dark);
        width: auto;
        border-radius: 0.5rem;
        padding: 0.5rem;
        max-width: fit-content;
        width: fit-content;
    }

    img {
        padding-block: auto;
        overflow: hidden;
        display: flex;
        align-self: center;
        margin-bottom: -20%;
        width: 50%;
        aspect-ratio:1;
        border-radius: 50%;
        border-style: double;
        border-width: 1rem;
        border-color: var(--dark);

    }

    img:hover{
        animation: 1s, spin;
        animation-name: spin;
        z-index: 1;
    }

    .Hero {
        padding: 2rem;

        border-color: var(--dark);
        border-style: solid;
        border-radius: 2rem;

        display: flex;
        flex-direction: column;
        flex-grow: 3;

        align-items: center;
        gap: 1rem;

        margin-top: auto;
        min-width: fit-content;
        font-weight: 400;
        font-style: normal;
        font-family: "Edu NSW ACT Cursive", cursive;
    }


    @keyframes spin {
        from {
            transform: rotate(360deg);
        }

        to {
            transform: rotate(0deg);
        }
    }

</style>
