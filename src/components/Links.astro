---
import links from "../json/links.json"
---

<div class="container">
{
    links.map( (link) => 
        <a href={link.url}>
            <img src={link.image}/>
        </a>
    )
}
</div>

<style>
    .container {
        display: flex;
        flex-direction: row;
        gap: 2rem;

        width: fit-content;
        margin-inline: auto;
        height: 5rem;
    }

    img {
        height: 100%;
        aspect-ratio: 1;
    }

    a {
        height: 100%;
        aspect-ratio: 1;
    }



</style>
