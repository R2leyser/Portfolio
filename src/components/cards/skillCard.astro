---
const {
    name,
    description,
    icon
} = Astro.props
---

<div id="card">
    <div class="img-container">
        <img src={icon} alt={name}>
    </div>
    <p>{description}</p>
</div>

<style>
    #card {
        padding: 2rem;

        border-color: var(--dark);
        border-style: solid;
        border-radius: 1rem;
        
        height: 60%;

        display: flex;
        flex-direction: column;
        align-items: center;

        text-align: center;

        gap: 1rem;
        margin: auto;

        box-shadow: 0.5rem 0.5rem 10px var(--background-dark);
        aspect-ratio: 1;
    }
    
    #card>*{
        margin-block-start: auto;
        margin-block-end: auto;
    }

    .img-container {
        display: flex;
        align-content: center;
        max-height: 70%;
        aspect-ratio: 1;
    }

    img {
        margin-block: auto;
        width: 100%;
        height: auto;
    }

    a {
        text-decoration: none;
        color: var(--foreground);

        display: flex;
        align-content: center;

        min: 100%;
    }


</style>
